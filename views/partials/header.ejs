<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Finances</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/ffc6eb7467.js" crossorigin="anonymous"></script>

    <!-- fonts -->
    <link href="https://fonts.googleapis.com/css2?family=ABeeZee&family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">

    <!-- my styles -->
    <link rel="stylesheet" href="/styles/alert.css">
    <link rel="stylesheet" href="/styles/styles.css">

  </head>
  <body data-state="<%= theme %>">

    <nav data-state="<%= theme %>" class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><i data-state="<%= theme %>" id="logo-icon" class="icon fas fa-lg fa-money-bill-wave"></i></a>

        <div class="nav-list-container">
          <ul class="nav nav-list">
            <li class="nav-item active">
              <a data-state="<%= theme %>" class="nav-link" href="/finances">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a data-state="<%= theme %>" class="nav-link" href="/logout">Log Out</a>
            </li>
          </ul>
        </div>
      </nav>

      <form class="" action="/finances/theme" method="post">
        <button data-state="<%= theme %>" class="change-theme-button" type="submit" name="button"><i class="fas fa-toggle-off"></i></button>
      </form>


      <!-- Success/error message for login/logout actions -->
      <div class="container">
          <% if (error && error.length>0) { %>
              <div class="alert alert-danger" role="alert">
                <h1><%= error %></h1>
                <button class="exit-alert-button button-danger" type="button" name="button">
                  &times;
                </button>
              </div>
          <% } else if (success && success.length > 0) { %>
              <div class="alert alert-success" role="alert">
                <h1><%= success %></h1>
                <button class="exit-alert-button button-success" type="button" name="button">
                  &times;
                </button>
              </div>
          <% } %>
      </div>
