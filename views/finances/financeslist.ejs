<div class="money-section">


<% if (!all) { %>

  <div class="row">
    <div class="col-10">
      <h3>Current Search: </h3>
    </div>
    <div class="index-button-container col-2">
        <button data-state="<%= theme %>" type="button" class="close-forms close-current-search" name="button"><i class="fas fa-plus"></i></button>
    </div>
  </div>

  <div data-state="open" class="current-query-container">

    <div class="current-query-form">
      <form class="" action="/finances" method="get">
        <button type="submit" class="remove-query-button btn btn-md btn-dark" name="removeItem" value="type">
          <span>Type:</span> All
          <span class="remove-query-icon">&times</span>
        </button>
      </form>
    </div>

    <div class="current-query-form">
      <form class="" action="/finances/amounts/queries/adjust" method="post">
        <% if (!sortAdjusted) { %>
        <button type="submit" class="remove-query-button btn btn-md btn-dark" name="removeItem" value="sortType">
          <span>Sort:</span> <%= sortType %>
          <span class="remove-query-icon">&times</span>
        </button>
        <% } %>
      </form>
    </div>

    <div class="current-query-form">
      <form class="" action="/finances/amounts/queries/adjust" method="post">
        <% if (!minAdjusted) { %>
          <button class="remove-query-button btn btn-md btn-dark" type="submit" name="removeItem" value="minDate">
                From:  <%= minDate.month %>/<%= minDate.day %>/<%= minDate.year %>
            <span class="remove-query-icon">&times</span>
          </button>
        <% } %>
      </form>
    </div>

    <div class="current-query-form">
      <form class="" action="/finances/amounts/queries/adjust" method="post">
        <% if (!maxAdjusted) { %>
          <button class="remove-query-button btn btn-md btn-dark" type="submit" name="removeItem" value="maxDate">
                To:  <%= maxDate.month %>/<%= maxDate.day %>/<%= maxDate.year %>
            <span class="remove-query-icon">&times</span>
          </button>
        <% } %>
      </form>
    </div>
  </div>

<hr data-state="<%= theme %>" class="index-hr">

<% } %>


  <div class="amounts-section row">
    <div class="amount-section col-lg-6">
      <div class="amount-section-header-row row">
        <div class="col-8">
          <h3 class="amounts-header">Income </h3>
        </div>
        <div class="col-3">
          <span data-state="<%= theme %>" class="income-total"><h3>$<%= Number(parseFloat(income).toFixed(2)).toLocaleString('en'); %></h3></span>
        </div>
      </div>
      <% amounts.forEach(function(amount){ %>
      <%  if (amount.type == "income") { %>

          <div class="amount amount-income row">

            <div data-state="<%= theme %>" class="amount-container amount-show-container col-1">
              <button type="button" class="show-description-button" name="">+</button>
            </div>

            <div data-state="<%= theme %>" class="amount-container col-lg-4 col-4">
              <div class="amount-date">
                <%= amount.date.month %>/<%= amount.date.day %>/<%= amount.date.year %>
              </div>
            </div>

            <div data-state="<%= theme %>" class="amount-container col-lg-6 col-6">
              <div class="amount-amount">
                <span class="dollar">$</span><%= Number(parseFloat(amount.amount).toFixed(2)).toLocaleString('en'); %>
              </div>
            </div>

            <div data-state="<%= theme %>" class="amount-button-container col-1">
              <form class="delete-item-form" action="/finances/<%= amount._id %>?_method=DELETE" method="post">
                <button data-state="<%= theme %>" class="delete-item delete-amount" type="submit" name="button"><i class="far fa-trash-alt"></i></button>
              </form>
            </div>

            <div data-toggle="closed" data-state="<%= theme %>" class="amount-container amount-description-container col-11">
              <div class="amount-description">
                <%= amount.description.substr(0, 30); %>
              </div>
            </div>


          </div>

      <%  } %>
      <% }) %>
    </div>
    <div class="amount-section col-lg-6">
      <div class="amount-section-header-row row">
        <div class="col-8">
          <h3 class="amounts-header">Expense</h3>
        </div>
        <div class="col-3">
          <span data-state="<%= theme %>" class="expense-total"><h3>$<%= Number(parseFloat(expense).toFixed(2)).toLocaleString('en'); %></h3></span>
        </div>
      </div>
        <% amounts.forEach(function(amount){ %>
        <% if (amount.type == "expense") { %>

              <div class="amount amount-expense row">

                <div data-state="<%= theme %>" class="amount-container amount-show-container col-1">
                  <button type="button" class="show-description-button" name="">+</button>
                </div>

                <div data-state="<%= theme %>" class="amount-container col-4">
                  <div class="amount-date">
                    <%= amount.date.month %>/<%= amount.date.day %>/<%= amount.date.year %>
                  </div>
                </div>

                <div data-state="<%= theme %>" class="amount-container col-6">
                  <div class="amount-amount">
                    <span class="dollar">$</span><%= Number(parseFloat(amount.amount).toFixed(2)).toLocaleString('en'); %>
                  </div>
                </div>

                <div class="amount-button-container col-1">
                  <form class="delete-item-form" action="/finances/<%= amount._id %>?_method=DELETE" method="post">
                    <button data-state="<%= theme %>" class="delete-item delete-amount delete-item-button" type="submit" name="button"><i class="far fa-trash-alt"></i></button>
                  </form>
                </div>

                <div data-toggle="closed" data-state="<%= theme %>" class="amount-container amount-description-container col-11">
                  <div class="amount-description">
                    <%= amount.description.substr(0, 30); %>
                  </div>
                </div>


              </div>

          <% } %>
        <% }); %>
  </div>

</div>
</div>
