<%- include("../partials/header.ejs") -%>


<div class="container-fluid">

  <div class="header-section">
    <h1 class="header-text">Finances</h1>

    <hr data-state="<%= theme %>" class="index-hr">

    <div class="row">
      <div class="col-10">
        <h2>Add and Filter</h2>
      </div>
      <div class="index-button-container col-2">
        <button data-state="<%= theme %>" class="close-forms close-add-filter" type="button" id="display-form" name="button"><i class="fas fa-plus"></i></button>
      </div>
    </div>


    <div data-toggle="open" class="form-section">
      <div class="row">
        <div class="col-lg-6">

          <form class="amount-form" action="/finances" method="post">

            <div class="row">
              <div class="col-10">
                <h3 class="amount-header">Add New Amount</h3>
              </div>
              <div class="amount-submit-container col-2">
                <div class="amount-submit">
                  <button class="add-amount btn btn-md btn-dark" type="submit" name="button"><i class="fas fa-plus"></i></button>
                </div>
              </div>
            </div>

            <div class="add-amount-section">
              <div class="amount-item amount-type">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label for="">Type:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <select data-state="<%= theme %>" class="type-select" name="newType">
                      <option value="income">Income</option>
                      <option value="expense">Expense</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="amount-item">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label for="newDate">Date:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <input data-state="<%= theme %>" class="date-select" type="date" min="2018-12-31" max="<%= date %>" value="<%= date %>" name="newDate">
                  </div>
                </div>
              </div>

              <div class="amount-item">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label for="newAmount">Amount:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <input data-state="<%= theme %>" class="amount-select" type="number" step="0.01" name="newAmount" placeholder="$">
                  </div>
                </div>
              </div>

              <div class="amount-item">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label for="newDescription">Notes:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <input data-state="<%= theme %>" maxlength="20" class="amount-descriptor" type="text" name="newDescription" placeholder="Description" autocomplete="off">
                  </div>
                </div>
              </div>
            </div>








          </form>
        </div>

        <div class="col-lg-6">


          <form class="filter-form" action="/finances/amounts" method="get">

            <div class="row">
              <div class="col-10">
                <h3 class="filter-header">Filter</h3>
              </div>
              <div class="filter-submit-container col-2">
                <div class="filter-submit">
                  <button class="filter-amount btn btn-md btn-dark" type="submit" name="button" value="none"><i class="fas fa-search"></i></button>
                </div>
              </div>
            </div>

            <div class="filter-amount-section">
              <div class="filter-item filter-type">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label for="">Type:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <select data-state="<%= theme %>" class="type-select" name="type">
                      <option value="none">All</option>
                      <option value="income">Income</option>
                      <option value="expense">Expense</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="filter-item filter-from">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label for="">From:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <input data-state="<%= theme %>" class="date-select" type="date" name="minDate" value="<%= date %>">
                  </div>
                </div>
              </div>

              <div class="filter-item filter-to">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label for="">To:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <input data-state="<%= theme %>" class="date-select" type="date" name="maxDate" value="<%= date %>">
                  </div>
                </div>
              </div>

              <div class="filter-item filter-sort">
                <div class="row">
                  <div class="col-lg-2 col-2">
                    <label class="sort-by-label" for="">Sort By:</label>
                  </div>
                  <div class="col-lg-10 col-10">
                    <select data-state="<%= theme %>" class="sort-select" name="sortType">
                      <option value="dateAscending">Date Ascending</option>
                      <option value="dateDescending">Date Descending</option>
                      <option value="amountAscending">Lowest Amount</option>
                      <option value="amountDescending">Highest Amount</option>
                    </select>
                  </div>
                </div>
              </div>

            </div>









          </form>
        </div>

      </div>
    </div>

    <hr data-state="<%= theme %>" class="index-hr">

  </div>

  <% if (type == "expense") { %>
    <%- include("./expenselist.ejs") -%>
  <% } else if (type == "income") { %>
    <%- include("./incomelist.ejs") -%>
  <% } else { %>
    <%- include("./financeslist.ejs") -%>
  <% } %>


</div>

<%- include("../partials/footer.ejs") -%>
