<%- include("partials/header.ejs") -%>


<div class="container-fluid">

  <div class="header-section">
    <h1 class="header-text">Finances</h1>

    <hr class="index-hr">

    <div class="row">
      <div class="col-10">
        <h2>Add and Filter</h2>
      </div>
      <div class="index-button-container col-2">
        <button type="button" class="display-form" name="button"><i class="fas fa-plus"></i></button>
      </div>
    </div>


    <div class="form-section">
      <div class="row">
        <div class="col-lg-6">
          <div class="row">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-10">
              <h3 class="amount-header">Add New Amount</h3>
            </div>
          </div>

          <form class="amount-form" action="/" method="post">
            <div class="amount-type">
              <div class="row">
                <div class="col-lg-2 col-2">
                  <label for="">Type:</label>
                </div>
                <div class="col-lg-10 col-10">
                  <select name="newType">
                    <option value="income">Income</option>
                    <option value="expense">Expense</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="amount-date">
              <div class="row">
                <div class="col-lg-2 col-2">
                  <label for="newDate">Date:</label>
                </div>
                <div class="col-lg-10 col-10">
                  <input type="date" min="2018-12-31" max="<%= date %>" value="<%= date %>" name="newDate">
                </div>
              </div>
            </div>

            <div class="amount-amount">
              <div class="row">
                <div class="col-lg-2 col-2">
                  <label for="newAmount">Amount:</label>
                </div>
                <div class="col-lg-10 col-10">
                  <input type="number" step="0.01" name="newAmount" placeholder="">
                </div>
              </div>
            </div>

            <div class="amount-description">
              <div class="row">
                <div class="col-lg-2 col-2">
                  <label for="newDescription">Notes:</label>
                </div>
                <div class="col-lg-10 col-10">
                  <input type="text" name="newDescription" placeholder="Description" autocomplete="off">
                </div>
              </div>
            </div>

            <div class="amount-submit">
              <button class="submit-amount" type="submit" name="button">+</button>
            </div>
          </form>
        </div>

        <div class="col-lg-6">
          <div class="row">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-10">
              <h3 class="filter-header">Filter</h3>
            </div>
          </div>

          <form class="filter-form" action="/amounts" method="get">
            <div class="filter-type">
              <div class="row">
                <div class="col-lg-2 col-2">
                  <label for="">Type:</label>
                </div>
                <div class="col-lg-10 col-10">
                  <select name="type">
                    <option value="none">All</option>
                    <option value="income">Income</option>
                    <option value="expense">Expense</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="filter-from">
              <div class="row">
                <div class="col-lg-2 col-2">
                  <label for="">From:</label>
                </div>
                <div class="col-lg-10 col-10">
                  <input type="date" name="minDate" value="<%= date %>">
                </div>
              </div>
            </div>

            <div class="filter-to">
              <div class="row">
                <div class="col-lg-2 col-2">
                  <label for="">To:</label>
                </div>
                <div class="col-lg-10 col-10">
                  <input type="date" name="maxDate" value="<%= date %>">
                </div>
              </div>
            </div>

            <div class="filter-submit">
              <button type="submit" name="button" value="none">Find</button>
            </div>
          </form>
        </div>

      </div>
    </div>

    <hr class="index-hr">

  </div>

  <% if (type == "expense") { %>
    <%- include("./expenselist.ejs") -%>
  <% } else if (type == "income") { %>
    <%- include("./incomelist.ejs") -%>
  <% } else { %>
    <%- include("./listy.ejs") -%>
  <% } %>


</div>

<%- include("partials/footer.ejs") -%>
